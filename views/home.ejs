	     $(".icons").css('visibility', 'visible');
	     $(".nav").css('display','block');
	      $(".nav2").css('display','none');
	 });

	</script>

<script>
	function goToEditFeature(event) {
	  event.preventDefault();
	  const id = prompt("Introduzca el ID de la categoría que desea editar");
	  if (id != null) {
		window.location.href = `/index/edit-feature/${id}`;
	  }
	}
